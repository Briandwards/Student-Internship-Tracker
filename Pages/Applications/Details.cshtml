@page
@model Student_Internship_Tracker.Pages_Applications.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Application</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Application.ApplicationDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Application.ApplicationDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Application.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Application.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(m => m.Application.Student)
        </dt>
        <dd class="col-sm-10">
            @(Model.Application?.Student != null ? Html.DisplayFor(m => Model.Application.Student.Email) : "N/A")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(m => m.Application!.Student!.FirstName)
        </dt>
        <dd class="col-sm-10">
            @(Model.Application?.Student != null ? Html.DisplayFor(m => Model.Application.Student.FirstName) : "N/A")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(m => m.Application.Internship)
        </dt>
        <dd class="col-sm-10">
            @(Model.Application?.Internship != null ? Html.DisplayFor(m => Model.Application.Internship.CompanyName) : "N/A")
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Application?.ApplicationId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
