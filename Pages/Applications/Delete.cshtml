@page
@model Student_Internship_Tracker.Pages_Applications.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Application</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(m => m.Application.ApplicationDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(m => m.Application.ApplicationDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(m => m.Application.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(m => m.Application.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(m => m.Application.Student)
        </dt>
        <dd class="col-sm-10">
            @(Model.Application?.Student != null ? Html.DisplayFor(m => Model.Application.Student.Email) : "N/A")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(m => m.Application.Internship)
        </dt>
        <dd class="col-sm-10">
            @(Model.Application?.Internship != null ? Html.DisplayFor(m => Model.Application.Internship.CompanyName) : "N/A")
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Application.ApplicationId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
