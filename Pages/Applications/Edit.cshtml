@page
@model Student_Internship_Tracker.Pages_Applications.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Application</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Application.ApplicationId" />
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Application.StudentId" class="control-label"></label>
                <select asp-for="Application.StudentId" class="form-control" asp-items="ViewBag.StudentId"></select>
                <span asp-validation-for="Application.StudentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Application.InternshipId" class="control-label"></label>
                <select asp-for="Application.InternshipId" class="form-control" asp-items="ViewBag.InternshipId"></select>
                <span asp-validation-for="Application.InternshipId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Application.ApplicationDate" class="control-label"></label>
                <input asp-for="Application.ApplicationDate" class="form-control" />
                <span asp-validation-for="Application.ApplicationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Application.Status" class="control-label"></label>
                <select asp-for="Application.Status" class="form-control" asp-items="ViewBag.StatusList">
                    <option value="">Select Status</option>
                </select>
                <span asp-validation-for="Application.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
